<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        tools:context="com.chaos.view.example.MainActivity">

        <com.chaos.view.PinView
            android:id="@+id/firstPinView"
            style="@style/PinWidget.PinView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:cursorVisible="true"
            android:hint="Hint."
            android:inputType="text"
            android:itemBackground="@mipmap/ic_launcher"
            android:padding="@dimen/common_padding"
            android:textColor="@color/text_colors"
            android:textSize="18sp"
            android:textStyle="bold"
            app:pv_cursorColor="@color/line_selected"
            app:pv_cursorWidth="2dp"
            app:pv_itemCount="5"
            app:pv_itemHeight="48dp"
            app:pv_itemRadius="4dp"
            app:pv_itemSpacing="0dp"
            app:pv_itemWidth="48dp"
            app:pv_lineColor="@color/line_colors"
            app:pv_lineWidth="2dp"
            app:pv_viewType="rectangle">

            <requestFocus />
        </com.chaos.view.PinView>

        <com.chaos.view.PinView
            android:id="@+id/secondPinView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/common_padding"
            android:inputType="number"
            android:text="1234" />

        <com.chaos.view.PinView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:padding="@dimen/common_padding"
            android:text="PIN"
            android:textColor="@color/colorAccent"
            app:pv_hideLineWhenFilled="true"
            app:pv_itemCount="3"
            app:pv_viewType="line" />

        <com.chaos.view.PinView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:itemBackground="@color/text_default"
            android:padding="@dimen/common_padding"
            android:text="您好"
            android:textColor="@color/colorPrimary"
            android:textStyle="italic"
            app:pv_itemCount="2" />

        <com.chaos.view.PinView
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:padding="@dimen/common_padding"
            android:text="12"
            android:textColor="@color/colorAccent"
            app:pv_itemCount="2" />

    </LinearLayout>
</ScrollView>
